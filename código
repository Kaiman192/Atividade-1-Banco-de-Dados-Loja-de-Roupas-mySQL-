create TABLE ELEMENTOS;
USE ELEMENTOS;
CREATE TABLE CATEGORIAS(
ID_CATEGORIA INT AUTO_INCREMENT,
NOME VARCHAR(50),
ID_PRODUTO INT AUTO_INCREMENT,
NOME VARCHAR(100),
TAMANHO VARCHAR(5),
COR VARCHAR(30),
PRECO DECIMAL(10, 2),
ESTOQUE INT,
ID_CATEGORIA INT,
ID_FORNECEDOR INT);

CREATE TABLE CLIENTES(
ID_CLIENT INT auto_increment,
NOME VARCHAR(100),
EMAIL VARCHAR(100),
TELEFONE VARCHAR(15),
ENDEREÇO VARCHAR(255),
ID_VENDA INT AUTO_INCREMENT,
ID_CLIENT INT,
DATA_VENDA DATETIME,
VALOR_TOTAL DECIMAL(10, 2),
ID_TEM INT AUTO_INCREMENT,
ID_VENDA INT,
ID_PRODUTO INT,
QUANTIDADE INT,
VALOR_UNITARIO DECIMAL(10, 2),
ID_FORNECEDOR INT AUTO_INCREMENT,
NOME VARCHAR(100),
TELEFONE VARCHAR(15),
ENDEREÇO VARCHAR(255)
);
